{
    "name": "connect-habesha/project",
    "description": "Connect Habesha Project",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "infection/infection": "^0.26",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "psalm": "psalm",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "infection": "infection",
        "analyze": [
            "@phpstan",
            "@psalm",
            "@cs"
        ],
        "check-all": [
            "@test",
            "@analyze"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 